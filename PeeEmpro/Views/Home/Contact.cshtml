                            <td title="'Auditor Status'" filter="{ U_AUDITOR_ACTION: 'text'}"
                                ng-style="{'color': x.U_AUDITOR_ACTION == 'Approve' ? 'green' : (x.U_AUDITOR_ACTION == 'Reject' ? 'red' : 'black')}"

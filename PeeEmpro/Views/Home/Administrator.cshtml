                            @*<td>
                                    <a href="@Url.Action("DownloadFile", "Home", x.U_CAD_A)" target="_blank">Open File</a>
                                </td>*@
                            <td>
                                @*<button type="button" style=" width: 110px; background-color: dodgerblue;" ng-click="downloadFile(x.U_CAD_A)">{{x.U_CAD_A}}</button>*@

                            <input style="margin-left:50px" class="form-control" type="text" ng-model="Sample.Sm_Remarks" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <label style="margin-right:-56px">Art Work P/D<strong class="text-danger"></strong></label>
                        </div>

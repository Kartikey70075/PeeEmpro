
@{
    ViewBag.Title = "Administrator";
}
<link href="~/assets/css/StyleSheet_Row.css" rel="stylesheet" />
<div ng-app="MyApp" ng-controller="MyCtrl" ng-init="INIT()">
    <div>
        <div class="table-responsive">
            <table style="width:1150px;margin-left:30px" ng-table="usersTable_Sm" class="table table-bordered table-striped" show-filter="true">
                <tr ng-repeat="x in $data" style="text-align:center" class="text-right">
                    <td title="'DocEntry'" filter="{ DocEntry: 'text'}" class="notfirst" style="text-align:center" sortable="'DocEntry'">{{x.DocEntry}}</td>
                    <td title="'Date Of Sampling'" filter="{ DATE: 'date'}" class="notfirst" style="text-align:center" sortable="'DATE'">{{x.DATE}}</td>
                    <td title="'Sales Employeer'" filter="{ UserNameFrom: 'date'}" class="notfirst" style="text-align:center" sortable="'UserNameFrom'">{{x.UserNameFrom}}</td>

                    <td title="'SAM_FOR_BUYER '" filter="{ SAM_FOR_BUYER: 'text'}" class="notfirst" style="text-align:center" sortable="'SAM_FOR_BUYER'">{{x.SAM_FOR_BUYER}}</td>
                    <td title="'Sempling Merchandiser'" filter="{ SAM_MERC: 'text'}" class="notfirst" style="text-align:center" sortable="'SAM_MERC'">{{x.SAM_MERC}}</td>
                    <td title="'Action'" class="notfirst" style="text-align:center;width:150px;text-align:center">
                        <button class="btn btn-sm btn-black" data-dismiss="modal" ng-click="Sample_View(x.DocEntry)"> View</button>
                    </td>
                    <td title="'Action'" class="notfirst" style="text-align:center;width:150px;text-align:center">
                        <button class="btn btn-sm btn-primary" data-dismiss="modal" ng-click="Approved(x.DocEntry)"> Approve</button>
                        <button class="btn btn-sm btn-danger" data-dismiss="modal" data-toggle="modal" data-target=".bd-example-modal-lg" ng-click="Reject_Semple(x.DocEntry)"> Reject</button>
                    </td>
                </tr>
            </table>
        </div>

    </div>
    <br />
    <br />
    <div ng-hide="Sm_View">

        <div class="card-header" style="background-color: #0097a7; height: 59px; margin-bottom: 4px; margin-top: -24px;">
            <div class="row">
                <div class="col-12 text-center" style="margin-left:-90px;">
                    <p style="font-weight:bold; color: white; margin-top: -11px; margin-left:67px; font-size: 25px !important; ">Sample View</p>
                </div>
            </div>

        </div>
        <br />
        <br />
        <div id="SamplteDivId">
            <div class="row" style="margin-left:12px">
                <div class="col-6">
                    <div class="row">
                        <div class="col-2">
                            <label style="margin-right:-56px">DocEntry<strong class="text-danger"></strong></label>
                        </div>

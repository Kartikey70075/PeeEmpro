                    <div class="row">
                        <div class="col-2">
                            <label style="margin-right:-56px">Sample Techniq Given By <strong class="text-danger"></strong></label>
                        </div>
                        <div class="col-4">
                            <input style="margin-left:50px" class="form-control" type="text" ng-model="Sample.Sm_Sample_tech" />
                        </div>
                    </div>
                    <div class="row">
                        <div class="col-2">
                            <label style="margin-right:-56px"> Product Profile  <strong class="text-danger"></strong></label>
                        </div>
                        <div class="col-4">
                            <input style="margin-left:50px" class="form-control" type="text" ng-model="Sample.Sm_Product_pr" />
